<!-- Endcover page -->
<amp-story-page id="endcover" class="amp-story-page amp-story-page__full">
    <amp-story-grid-layer template="fill" class="layer-background">
        {{> ../media/tpl-image-full }}
    </amp-story-grid-layer>

    <amp-story-grid-layer template="vertical" class="layer-content">
        <div class="layer-content__inner">
            <div class="amp-endcover">
                <div class="amp-endcover__content">
                    <div class="amp-contexte {{#contexte-align.left}}left{{/contexte-align.left}}{{#contexte-align.right}}right{{/contexte-align.right}}">
                        <div class="amp-contexte--content">
                            <span class="title">{{{contexte.title}}}</span>
                            <p>{{{contexte.realisation}}}</p>
                            <div class="copyright">&copy;{{{contexte.copyright}}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </amp-story-grid-layer>

    <amp-story-grid-layer template="vertical" class="layer-foreground">
        <div class="layer-foreground__inner">
            <div class="amp-logo-holder">
                <amp-img src="assets/icons/logo-ina.svg"
                    width="50"
                    height="50"
                    class="logo-ina-cover">
                </amp-img>
            </div>
        </div>
    </amp-story-grid-layer>

</amp-story-page>