{# amp-video.njk #}
{# attr noaudio / loop : true | false #}
<amp-video id="{{card.background.video.name}}" autoplay {% if card.background.video.noaudio %}noaudio{% endif %} {% if card.background.video.loop %}loop{% endif %}
  width="0.56"
  height="1"
  layout="fill"
  poster="assets/videos/{{card.background.video.name}}/poster.jpg">
  <source src="assets/videos/{{card.background.video.name}}/video.webm" type="video/webm" />
  <source src="assets/videos/{{card.background.video.name}}/video.mp4" type="video/mp4" />
  <track src="assets/videos/{{card.background.video.name}}/subtitles.vtt" label="Français" kind="subtitles" srclang="fr" default>
  <div fallback>
      <p>Votre navigateur ne supporte pas ce format vidéo.</p>
  </div>
</amp-video>